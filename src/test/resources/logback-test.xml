<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger - set to WARN to reduce noise during tests -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Reduce database logging noise -->
    <logger name="scalikejdbc" level="ERROR" />
    <logger name="org.h2" level="ERROR" />
    
    <!-- Keep our application logs visible -->
    <logger name="services" level="INFO" />
    <logger name="routes" level="INFO" />
</configuration>
